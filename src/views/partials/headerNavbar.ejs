<header class="header">
  <nav class="navbar"> 
    
    <!-- Dropdown Mobile & Logo-->
    <div class="container-logo">
      <a href="/" class="">
        <img class="logo" src="/images/Logo1.png" />
      </a>

      <button class="button-menu">
        <span class="lines span1"></span>
        <span class="lines span2"></span>
        <span class="lines span3"></span>
      </button>

      <div class="menu-mobile">
        <ul class="navegador-central">
          <li>
            <div class="buscador">
              <input list="search" type="text" class="input-buscador" placeholder="¿Qué buscas?">
              <div class="juancho" hidden="true">
                 <ul id="search" class="products-search"></ul>          
              </div> 
            </div>
          </li>
          <li>
            <i class="fas fa-wine-glass-alt"></i>
            <a class="li-link" href="/filtro/1">Vinos</a>
          </li>
          <li>
            <i class="fas fa-glass-cheers"></i>
            <a class="li-link" href="/filtro/4">Espumantes</a>
          </li>
          <li>
            <i class="fas fa-glass-whiskey"></i>
            <a class="li-link" href="/filtro/2">Whiskies</a>
          </li>
        </ul>        
      </div>
      <div class="btn-group dropleft user-mobile">
        <a class="btn btn-sm dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-users"></i></a>
        <div class="dropdown-menu">
          <% if(typeof localUser == "undefined") { %>
            <a class="dropdown-item" href="/users/register"> Registrate</a> <!-- Deberia dejar verse al estar logueado-->
            <a class="dropdown-item" href="/users/login"> Ingresar</a>
          <% } else { %>
            <a class="dropdown-item" href="/exit"> Logout</a> <!-- Deberia verse solo estando logueado-->
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/users/account/<%=(localUser ? localUser.id :":id" )%>">Tu cuenta</a>
          <% } %>
        </div>
      </div>     
    </div>
    
    
    <!-- Banner Carousel-->
    <section class="main-banner">   
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner d-block w-100">
          <div class="carousel-item active">
            <img src="/images/banner1.jpg" class="d-block w-100" alt="banner1">
          </div>
          <div class="carousel-item">
            <img src="/images/banner2.jpg" class="d-block w-100" alt="banner2">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </section>
    
    
    
    <nav class="navegador">
      <ul class="navegador-central">
        <li><a href="/filtro/1">Vinos</a></li>
        <li><a href="/filtro/4">Espumantes</a></li>
        <li><a href="/filtro/2">Whiskies</a></li>
      </ul>

      <ul class="navegador-central">
        <li>
          <div class="buscador">
            <input list="search" type="text" class="input-buscador" placeholder="¿Qué buscas?">
            <div class="juancho" hidden="true">
               <ul id="search" class="products-search">
        
              </ul>
        
            </div> 
          </div>
        </li>
      </ul>
      
      <ul class="navegador-derecha">
            <li>
          <a href="/cart"><i class="fas fa-shopping-basket"></i></a>
        </li>
        <li class="dropdown">
          <a class="btn btn-sm dropdown-toggle dropdown-toggle-split" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-users"></i></a>
          <div class="dropdown-menu dropdown-menu-right">
            <% if(typeof localUser == "undefined") { %>
              <a class="dropdown-item" href="/users/register"> Registrate</a> <!-- Deberia dejar verse al estar logueado-->
              <a class="dropdown-item" href="/users/login"> Ingresar</a>
            <% } else { %>
              <a class="dropdown-item" href="/exit"> Logout</a> <!-- Deberia verse solo estando logueado-->
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/users/account/<%=(localUser ? localUser.id :":id" )%>">Tu cuenta</a>
            <% } %>
          </div>
        </li>
        <li>
          <% if(typeof localAdmin !== "undefined") { %>
            <a href="/admin/index"><i class="fas fa-edit"></i></a>
          <% } %>
        </li>
      </ul>
    </nav> 
  </nav>
</header>
