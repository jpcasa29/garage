<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'Mi Cuenta'}) %>
<body>
	
  <!-- Navbar Gral -->
  <%- include('partials/navbarGral') %>
	<!-- /Navbar Gral -->
	
	<div class="container">	
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
			<div class="info-usuario">
				<h1>Datos Personales</h1>				
				<form action="/users/account/<%= user.id %>" method="post" enctype="multipart/form-data" class="account-edit">
					<div class="form-group required">
						<label for="first_name">Nombre</label>
						<input type="text" name="first_name" class="form-control" id="first_name" required="required" width= "100vw" value=<%= user.first_name %>>
						<small class="text-danger validate-name"></small>

						<label for="last_name">Apellido</label>
						<input type="text" name="last_name" class="form-control" id="last_name" required="required" width= "100vw" value=<%= user.last_name%>>
						<small class="text-danger validate-surname"></small>
					</div>
					
					<div class="form-group required">
						<label for="email">Email</label>
						<input type="text" value=<%= user.email %> name="email" class="form-control" id="email" aria-describedby="emailHelp">
						<small class="text-danger validate-email"><%= (typeof errors != 'undefined' && errors.email) ? errors.email.msg : '' %></small>

						<!--
						<label for="password">Cambiar Contraseña</label>
						<input type="password" name="password" class="form-control" id="password" required="required" width= "100vw">						
						<small class="text-danger validate-password"><%= (typeof errors != 'undefined' && errors.email) ? errors.email.msg : '' %></small> <br>
						-->
					</div>
					<div>						
						<label for="userDireccion">Direccion</label>
						<input type="text" name="direccion" value='<%= user.direccion %>' class="form-control" id="userDireccion"  width= "100vw">

						<label for="userTelefono">Teléfono</label>
						<input type="phone" name="telefono" value='<%= user.telefono %>' class="form-control" id="userTelefono" width= "100vw">						
					</div>
					<div class="container">
						<label for="image">Cambiar Avatar</label>
						<input class="" type="file" name="image" width= "100vw">
					</div>				
					
					<button type="submit" class="container btn btn-success btn-lg btn-block col-md-6 mb-6">Confirmar cambios</button>								
				</form>
			</div>
			</div>
			<div class="col-md-3"></div>
		</div>
	</div>

	<%- include('./partials/footer') %>

    <script src="/js/validations-front/account-edit.js" type="text/javascript"></script>

</body>	
</html>