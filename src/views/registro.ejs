<!DOCTYPE html>
<html lang="en">
<!-- Include Head -->
<%- include('partials/head', {title: 'La Wineria | Registrate'}) %>
<body>
	<!-- Navbar Gral -->
  <%- include('partials/navbarGral') %>
  <!-- /Navbar Gral -->
	<div class="container">	
		<div class="row">
			<div class="col-12 col-lg-10 col-sm-10"></div>
				<div class="info-usuario">
					<h1>Registrate</h1>				
					<form action="" method="post" enctype="multipart/form-data" class="register-form">
						<div class="form-group required">
							<label for="first_name">Nombre</label>
							<input type="text" name="first_name" class="form-control" id="first_name" width= "100vw">
							<small class="text-danger validate-name"></small><br>

							<label for="last_name">Apellido</label>
							<input type="text" name="last_name" class="form-control" id="last_name" width= "100vw">
							<small class="text-danger validate-surname"></small><br>
						</div>
						
						<div class="form-group required">
							<label for="email">Email</label>
							<input type="text" value="<%= (typeof old != 'undefined' && !errors.email) ? old.email : '' %>" name="email" class="form-control" id="email" aria-describedby="emailHelp">
							<small class="text-danger"><%= (typeof errors != 'undefined' && errors.email) ? errors.email.msg : '' %></small>
							<small class="text-danger validate-email"></small><br> 

							<label for="password">Contraseña</label>
							<input type="password" name="password" class="form-control" id="password" width= "100vw">
							<small class="text-danger"><%= (typeof errors != 'undefined' && errors.email) ? errors.email.msg : '' %></small>
							<small class="text-danger validate-password"></small><br>
						</div>
						<!-- Lo utilizamos en Tabla Direcciones de entregas cuando lo hagamos
						<div>						
							<label for="userDireccion">Direccion</label>
							<input type="text" name="direccion" class="form-control" id="userDireccion"  width= "100vw">

							<label for="userTelefono">Teléfono</label>
							<input type="number" name="telefono" class="form-control" id="userTelefono" width= "100vw">						
						</div>
						-->
						<div class="container">
							<div class="row">
								<div class="col-12 col-lg-10 col-sm-10">
									<label for="image">Cargar Avatar</label>
									<input type="file" name="image">
								</div>
							</div>	
						</div>				
						
						<button type="submit" class="container btn btn-success btn-lg btn-block col-md-6 mb-6">Crear usuario</button>								
					</form>
				</div>
			</div>
		</div>
	</div>
	 <!-- footer -->
	 <%- include('partials/footer') %>
	 <!-- /footer -->	

	 <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
	 <script src="/js/validations-front/register.js" type="text/javascript"></script>
</body>	
</html>